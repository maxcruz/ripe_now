<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            app:startDestination="@id/splashFragment">

    <fragment android:id="@+id/splashFragment"
              android:name="app.ripenow.android.splash.SplashFragment"
              android:label="fragment_splash"
              tools:layout="@layout/fragment_splash">

        <action android:id="@+id/action_splashFragment_to_storeListFragment"
                app:destination="@id/storeListFragment"/>

    </fragment>

    <fragment android:id="@+id/storeListFragment"
              android:name="app.ripenow.android.storeList.StoreListFragment"
              android:label="fragment_store_list"
              tools:layout="@layout/fragment_store_list">
        <action android:id="@+id/action_storeListFragment_to_storeDetailFragment"
                app:destination="@id/storeDetailFragment"/>
    </fragment>
    <fragment android:id="@+id/storeDetailFragment" android:name="app.ripenow.android.storeDetail.StoreDetailFragment"
              android:label="fragment_store_detail" tools:layout="@layout/fragment_store_detail"/>

</navigation>